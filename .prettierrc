{
  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],

  "tabWidth": 2,
  "semi": true,
  "useTabs": false,
  "singleQuote": false,
  "bracketSpacing": true,
  "printWidth": 120,
  "jsxBracketSameLine": false,
  "jsxSingleQuote": false,
  "trailingComma": "es5",
  "arrowParens": "avoid"
}
